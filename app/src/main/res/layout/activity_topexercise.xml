<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topexercise"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titlepage_ex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/bungee"
            android:text="Top Activities"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/subtitlepageex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-20dp"
            android:text="Easy Exercises for beginners"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/intro_ex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/bungee"
            android:text="Introduction"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/introsubtitlepageex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:text="You Can Add here Whatever related to your exercises"
            android:textColor="@color/black"
            android:textSize="20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp">


        <ImageView
            android:layout_width="173dp"
            android:layout_height="97dp"
            android:layout_margin="10dp"
            android:background="@drawable/yoga"
            android:elevation="10dp"
            />


        <ImageView


            android:layout_width="173dp"
            android:layout_height="97dp"
            android:layout_margin="10dp"
            android:background="@drawable/running"
            android:elevation="10dp"/>

        <ImageView


            android:layout_width="173dp"
            android:layout_height="97dp"
            android:layout_margin="10dp"
            android:background="@drawable/cycling"
            android:elevation="10dp"/>

        <ImageView


            android:layout_width="173dp"
            android:layout_height="97dp"
            android:layout_margin="10dp"
            android:background="@drawable/gym"
            android:elevation="10dp"/>

        <Button
            android:id="@+id/btnYoga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="-440dp"
            android:background="@drawable/btn_black_rounded"
            android:fontFamily="@font/bungee"
            android:text="Yoga"
            android:textColor="@color/black"
            android:textColorLink="#000000"
            android:textSize="20sp" />


        <Button
            android:id="@+id/btnrunning"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/bungee"
            android:text="Running"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/btn_black_rounded"/>

        <Button
            android:id="@+id/btnCycling"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/bungee"
            android:text="Cycling"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/btn_black_rounded"/>

        <Button
            android:id="@+id/btnGym"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/bungee"
            android:text="Gym"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/btn_black_rounded"/>



    </LinearLayout>






    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnCalorycalculator"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:fontFamily="@font/bungee"
            android:text="Calory Count"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/btn_black_rounded"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="15dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>





