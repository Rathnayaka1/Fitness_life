<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topexercise"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titlepage_ex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/bungee"
            android:text="Top Activities"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/subtitlepageex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:text="Easy Exercises for beginners"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/intro_ex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/bungee"
            android:text="Introduction"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/introsubtitlepageex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:text="You Can Add here Whatever related to your exercises"
            android:textColor="@color/black"
            android:textSize="20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp">


        <ImageView
            android:layout_width="173dp"
            android:layout_height="97dp"
            android:layout_margin="10dp"
            android:background="@drawable/yoga"
            android:elevation="10dp"
            />


        <ImageView


            android:layout_width="173dp"
            android:layout_height="97dp"
            android:layout_margin="10dp"
            android:background="@drawable/running"
            android:elevation="10dp"/>

        <ImageView


            android:layout_width="173dp"
            android:layout_height="97dp"
            android:layout_margin="10dp"
            android:background="@drawable/cycling"
            android:elevation="10dp"/>

        <ImageView


            android:layout_width="173dp"
            android:layout_height="97dp"
            android:layout_margin="10dp"
            android:background="@drawable/gym"
            android:elevation="10dp"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="-430dp"
            android:fontFamily="@font/bungee"
            android:text="Yoga"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/bungee"
            android:text="Running"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/bungee"
            android:text="Cycling"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/bungee"
            android:text="Gym"
            android:textColor="@color/black"
            android:textSize="20sp" />



    </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="-75dp"
            app:cardCornerRadius="16dp"
            android:layout_marginBottom="-15dp"
            android:layout_alignParentBottom="true">

            <!-- Set the content inside the CardView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black">

            </LinearLayout>



            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="CONTINUE WORKOUT"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp"
                app:fontFamily="sans-serif-black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_alignParentBottom="true"

                />

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
