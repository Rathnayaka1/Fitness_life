<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">




    <!-- Heart Rate Text -->
    <TextView
        android:id="@+id/tvHeartRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heart rate"
        android:textSize="22sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <!-- Heartbeat Graph Line -->
    <ImageView
        android:id="@+id/imgHeartbeatGraph"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tvHeartRate"
        android:layout_marginTop="30dp"
        android:scaleType="fitCenter"
        android:src="@drawable/heartbeat_graph"/>

    <!-- Circular Progress Indicator -->
    <ProgressBar
        android:id="@+id/progressCircular"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imgHeartbeatGraph"
        android:layout_marginTop="20dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progress_circle"/>

    <!-- Heart Icon -->
    <ImageView
        android:id="@+id/imgHeart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_heart"
        android:layout_centerInParent="true"
        android:tint="#FF3D00"/>

    <!-- BPM Display -->
    <TextView
        android:id="@+id/tvBpm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25"
        android:textSize="36sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tvBpmUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bpm"
        android:textSize="18sp"
        android:textColor="#666"
        android:layout_below="@id/tvBpm"
        android:layout_centerHorizontal="true"/>

    <!-- Measuring Progress -->
    <TextView
        android:id="@+id/tvMeasuring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Measuring... (25%)"
        android:textSize="18sp"
        android:textColor="#FF3D00"
        android:textStyle="bold"
        android:layout_below="@id/tvBpmUnit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <!-- Gradient Button -->
    <ImageView
        android:id="@+id/btnMeasure"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvMeasuring"
        android:layout_marginTop="40dp"
        android:src="@drawable/button_gradient"/>

    <!-- Hold Finger Text -->
    <TextView
        android:id="@+id/tvHoldFinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hold your finger still"
        android:textSize="16sp"
        android:textColor="#666"
        android:layout_below="@id/btnMeasure"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
</RelativeLayout>
